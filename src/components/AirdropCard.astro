---
interface Props {
  title: string;
  description: string;
  value: string;
  endDate?: string;
  requirements: string[];
  image: string;
}

const { title, description, value, endDate, requirements, image } = Astro.props;

// Create a URL-friendly slug from the title
const slug = title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 group">
  <a href={`/airdrops/${slug}`} class="block">
    <img src={image} alt={title} class="ease-in-out w-full h-48 object-cover" />
    <div class="p-6">
      <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-2 group-hover:text-primary line-clamp-1">{title}</h2>
    <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2">{description}</p>
    
    <div class="flex justify-between items-center mb-4">
      <div>
        <span class="text-sm text-gray-500 dark:text-gray-400">Estimated Value</span>
        <p class="text-lg font-semibold text-primary">{value}</p>
      </div>
      <div>
        <span class="text-sm text-gray-500 dark:text-gray-400">Ends In</span>
        <p class="text-lg font-semibold text-red-500">{endDate}</p>
      </div>
    </div>

    <div class="mb-4">
      <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-200 mb-2">Requirements:</h3>
      <ul class="list-disc list-inside text-gray-600 dark:text-gray-300 line-clamp-3">
        {requirements.map(req => <li>{req}</li>)}
      </ul>
    </div>

    <a href={`/airdrops/${slug}`} 
       class="inline-block w-full text-center bg-primary text-white py-2 px-4 rounded-md hover:bg-blue-600 transition-colors duration-300">
      View Details
    </a>
  </div>
</a>
</article>